{
  "name": "crypto-portfolio-tracker",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/connectors/*"
  ],
  "scripts": {
    "build": "pnpm -r --filter ./apps/... --filter ./packages/... run build",
    "build:root": "vite build",
    "dev": "pnpm -r --parallel --filter ./apps/api --filter ./apps/web --filter ./apps/worker dev",
    "start": "pnpm --filter ./apps/api start",
    "api": "pnpm --filter ./apps/api dev",
    "web": "pnpm --filter ./apps/web dev",
    "worker": "pnpm --filter ./apps/worker dev",
    "db:migrate": "pnpm --filter @cpt/db prisma:migrate",
    "db:generate": "pnpm --filter @cpt/db prisma:generate",
    "db:seed": "pnpm --filter @cpt/db prisma:seed",
    "db:setup": "pnpm db:migrate && pnpm db:seed",
    "compose:up": "docker compose up -d",
    "compose:down": "docker compose down",
    "compose:ps": "docker compose ps",
    "compose:logs": "docker compose logs -f"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0"
  }
}
